---
// 404 Page for Astro.js using myst-awesome layout
import Layout from '../../myst-awesome/src/layouts/Layout.astro';

const title = "Page Not Found - The Insight Journal";
const description = "The page you're looking for could not be found.";
const currentYear = new Date().getFullYear();
---

<Layout title={title} description={description}>
  <main class="not-found-container">
    <div class="content">
      <h1 class="title">Page not found.</h1>
      <p class="nav-link">
        <a href="/">Go to the main page</a>
      </p>
    </div>

    <div class="image-section">
      <img
        src="/titan.png"
        alt="Titan illustration"
        class="titan-image"
      />

      <p class="message">
        <svg
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="currentColor"
          class="lightbulb-icon"
        >
          <path d="M9 21c0 .55.45 1 1 1h4c.55 0 1-.45 1-1v-1H9v1zm3-19C8.14 2 5 5.14 5 9c0 2.38 1.19 4.47 3 5.74V17c0 .55.45 1 1 1h6c.55 0 1-.45 1-1v-2.26c1.81-1.27 3-3.36 3-5.74 0-3.86-3.14-7-7-7zm2.85 11.1l-.85.6V16h-4v-2.3l-.85-.6C7.8 12.16 7 10.63 7 9c0-2.76 2.24-5 5-5s5 2.24 5 5c0 1.63-.8 3.16-2.15 4.1z" />
        </svg>
        Keep up the inquiry, friend
      </p>

      <div class="copyright">
        <p>
          Copyright Â© NumFOCUS, Inc. for the Insight Software Consortium {currentYear}
          <br/>
          This work is licensed under a
          <a
            href="http://creativecommons.org/licenses/by/3.0/"
            rel="license"
          >
            Creative Commons Attribution 3.0 Unported License
          </a>.
          <br/>
          <a
            href="https://github.com/thewtex/InsightJournal"
            class="github-link"
          >
            <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" class="github-icon">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            View on GitHub
          </a>
        </p>
      </div>
    </div>
  </main>
</Layout>

<style>
  .not-found-container {
    padding: 2rem;
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
    min-height: 60vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .content {
    margin: 2rem 0;
  }

  .title {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: var(--sl-color-text, #1a1a1a);
    font-weight: bold;
  }

  .nav-link {
    font-size: 1.1rem;
    margin-bottom: 2rem;
  }

  .nav-link a {
    color: var(--sl-color-accent, #0066cc);
    text-decoration: underline;
  }

  .nav-link a:hover {
    text-decoration: none;
  }

  .image-section {
    margin: 2rem 0;
  }

  .titan-image {
    width: 200px;
    height: 225px;
    object-fit: contain;
    display: block;
    margin: 0 auto;
  }

  .message {
    margin-top: 1.5rem;
    margin-bottom: 1.5rem;
    color: var(--sl-color-text-accent, #666);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }

  .lightbulb-icon {
    vertical-align: middle;
  }

  .copyright {
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid var(--sl-color-gray-5, #e0e0e0);
  }

  .copyright p {
    font-size: 0.9rem;
    color: var(--sl-color-text-accent, #666);
    line-height: 1.6;
  }

  .copyright a {
    color: inherit;
    text-decoration: underline;
  }

  .copyright a:hover {
    text-decoration: none;
  }

  .github-link {
    text-decoration: none !important;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: 0.5rem;
  }

  .github-icon {
    width: 16px;
    height: 16px;
  }

  /* Dark mode support */
  @media (prefers-color-scheme: dark) {
    .title {
      color: var(--sl-color-text, #f0f0f0);
    }

    .copyright {
      border-top-color: var(--sl-color-gray-5, #333);
    }
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .not-found-container {
      padding: 1rem;
    }

    .title {
      font-size: 2rem;
    }

    .titan-image {
      width: 150px;
      height: 169px;
    }
  }
</style>
