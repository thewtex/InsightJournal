---
// SPDX-License-Identifier: MIT
// SPDX-FileCopyrightText: 2025 Fideus Labs LLC

interface Props {
  year?: number;
  showBrand?: boolean;
  lastModified?: Date;
  sections?: Array<{
    title: string;
    links: Array<{
      title: string;
      href: string;
    }>;
  }>;
}

const {
  year = new Date().getFullYear(),
  showBrand = true,
  lastModified,
  sections = [
    {
      title: "Documentation",
      links: [
        { title: "Manifesto", href: "/about#manifesto" },
        { title: "Technology", href: "/about#technology" },
        { title: "Contribution", href: "/about#contribute" }
      ]
    },
    {
      title: "Contribute",
      links: [
        { title: "Article Template", href: "https://github.com/InsightSoftwareConsortium/InsightJournalTemplate" },
        // { title: "Submit", href: "/examples" },
        // { title: "Review", href: "/examples" },
        { title: "Journal GitHub", href: "https://github.com/InsightSoftwareConsortium/InsightJournal" },
      ]
    }
  ]
} = Astro.props;

import { Image } from 'astro:assets';
import fideusLogo from '../assets/fideus-logo.svg';
---

<footer class="docs-footer">
  <div class="footer-content">
    {sections.map(section => (
      <div class="footer-section">
        <h4>{section.title}</h4>
        <ul>
          {section.links.map(link => (
            <li><a href={link.href}>{link.title}</a></li>
          ))}
        </ul>
      </div>
    ))}
  </div>

  {showBrand && (
    <div class="footer-bottom">
      <p>
        &copy; {year} <a href="https://numfocus.org" target="_blank" rel="noopener noreferrer">NumFOCUS Inc</a> for the <a href="https://insightsoftwareconsortium.org" target="_blank" rel="noopener noreferrer">Insight Software Consortium</a>
        <br/>
        This work is licensed under a <a href="https://creativecommons.org/licenses/by/4.0/" target="_blank" rel="noopener noreferrer">Creative Commons Attribution 4.0 International License</a>
      </p>

      <p>
        <a href="https://fideus.io" target="_blank" rel="noopener noreferrer">
          <Image width={100} src={fideusLogo} alt="Fideus Labs logo" />
        </a>
        <br/>
        Built with <a href="https://github.com/awesome-myst/myst-awesome" target="_blank" rel="noopener noreferrer">MyST Awesome</a> by <a href="https://fideus.io" target="_blank" rel="noopener noreferrer">‚®çideus labs</a>
        <br/>
        {lastModified && (
          <time class="last-modified">
            Last updated: {lastModified.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </time>
        )}
      </p>

    </div>
  )}
</footer>

<style>
  .docs-footer {
    width: 100%;
  }

  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    justify-items: center;
    gap: var(--wa-space-l);
    margin-bottom: var(--wa-space-l);
  }

  .footer-section h4 {
    font-size: var(--wa-font-size-m);
    font-weight: var(--wa-font-weight-semibold);
    margin: 0 0 var(--wa-space-s) 0;
    color: var(--wa-color-text-normal);
  }

  .footer-section ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .footer-section li {
    margin-bottom: var(--wa-space-2xs);
  }

  .footer-section a {
    color: var(--wa-color-text-quiet);
    text-decoration: none;
    font-size: var(--wa-font-size-s);
  }

  .footer-section a:hover {
    color: var(--wa-color-text-link);
    text-decoration: underline;
  }

  .footer-bottom {
    padding-top: var(--wa-space-l);
    border-top: 1px solid var(--wa-color-surface-border);
    color: var(--wa-color-text-quiet);
    font-size: var(--wa-font-size-s);
    text-align: center;
  }

  .footer-bottom time {
    margin: 0;
    font-size: var(--wa-font-size-s);
  }

  .footer-bottom .last-modified {
    margin-top: var(--wa-space-xs);
    font-size: var(--wa-font-size-xs);
    opacity: 0.8;
  }

  /* Responsive adjustments */
  @media (max-width: 920px) {
    .footer-content {
      grid-template-columns: 1fr;
    }
  }
</style>
